æfing 10

int1 = int(input("Enter a number: "))

if int1 <10 or int1 >0:
    print("Less than 10")
elif int1 > 10 or int1 <= 20:
    print("between 10 and 20")
elif int1 > 20:
    print("The value is too high!")
elif int1 >0:
    print("too low")

Æfing 11

a = int(input("Number 1: "))
b = int(input("Number 2: "))
choice = int(input("Choice: "))


if choice == 1:
    print(a + b)
elif choice == 2:
    print(b - a)
elif choice == 3:
    print(a * b)
else:
    print("Invalid input.")

